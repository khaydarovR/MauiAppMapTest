<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMapTest.Page.AccPage"
             Title="AccPage"
             xmlns:local="clr-namespace:MauiAppMapTest.Page"
             x:DataType="local:AccPage">
    <VerticalStackLayout Padding="12">
        <HorizontalStackLayout>
            <Image
                Source="acc.png"
                HeightRequest="80"/>
            <VerticalStackLayout Padding="10,0">
                <Label FontSize="Title" Text="{Binding Email}" />
                <Label FontSize="Subtitle" Text="{Binding Role}" />
                <Label Padding="0, 10" FontSize="Micro" Text="{Binding Id}" />
            </VerticalStackLayout>
        </HorizontalStackLayout>

        <VerticalStackLayout Padding="10">
            <HorizontalStackLayout>
                <Label FontSize="Medium" Text="Доставлено: "></Label>
                <Label FontSize="Medium" Text="32 заказа"></Label>
            </HorizontalStackLayout>
            <HorizontalStackLayout>
                <Label FontSize="Medium" Text="На сумму: "></Label>
                <Label FontSize="Medium" Text="5424 руб."></Label>
            </HorizontalStackLayout>
        </VerticalStackLayout>



    </VerticalStackLayout>
</ContentPage>